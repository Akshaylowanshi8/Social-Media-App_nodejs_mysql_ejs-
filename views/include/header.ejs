<style>

body {
    margin: 0;
    font-family: Arial, sans-serif;
}

.header {
    background-color: #f1f1f1;
    color: #000;
    padding: 20px;
    position: sticky;
    z-index: 3;
    top: 0px;
    width: 100%;
    border-bottom: #000 1px solid;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.logo {
    display: flex;
    align-items: center;
    color: #333;
    text-decoration: none;
    font-size: 24px;
    margin-bottom: 10px;
}

.logo-icon {
    height: 24px;
    width: 24px;
    margin-right: 10px;
}

.new-post {
    margin-right: auto;
}

.new-post a {
    text-decoration: none;
    color: #000;
    font-weight: bold;
    display: flex;
    align-items: center;
}

.new-post-icon {
    margin-right: 5px;
}

.nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.nav-link {
    color: #333;
    text-decoration: none;
    margin: 0 15px;
    display: flex;
    align-items: center;
}

.nav-link:hover {
    color: #000;
}

.nav-link-bold {
    font-weight: bold;
}

.nav-icon {
    margin-right: 5px;
}

.user-info {
    margin-left: auto;
}

#username-display {
    margin-right: 15px;
}

.auth-button {
    background: none;
    border: none;
    color: #000;
    font-weight: bold;
    cursor: pointer;
}

.auth-icon {
    margin-left: 5px;
}

@media (max-width: 768px) {
.header{

  text-align: center;
}
  .container {
    display: flex;
     flex-direction: column;
    align-items: center;
    text-align: center;
}
.nav{

  display: inline;
}
    
}
</style>


    <header class="header">
        <div class="container">
            <div class="new-post">
                <a href="/user/postNew">
                    <i class="fa-solid fa-square-plus new-post-icon"></i> New Post
                </a>
            </div>
            <nav class="nav">
                <a class="nav-link" href="/">
                   Home
                </a>
                <a class="nav-link nav-link-bold" href="/user/myPost">My Post</a>
                <a class="nav-link" href="#">
                    Message
                </a>
            </nav>
            <div class="user-info">
                <span id="username-display">Welcome, Guest!</span>
                <div id="auth-buttons">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
                </div>
            </div>
        </div>
    </header>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const username = localStorage.getItem('username');
            const usernameDisplay = document.getElementById('username-display');
            const authButtons = document.getElementById('auth-buttons');

     
          
            if (username) {
                usernameDisplay.textContent = `Welcome, ${username}`;
                authButtons.innerHTML = `
                    <button  id="logout" class="auth-button">
                        <a href="/logout">Logout <i class="fa-solid fa-right-to-bracket auth-icon"></i></a>
                    </button>
                `;
            } else {
                usernameDisplay.textContent = 'Welcome, Guest!';
                authButtons.innerHTML = `
                    <button class="auth-button">
                        <a href="/login">Login <i class="fa-solid fa-right-to-bracket auth-icon"></i></a>
                    </button>
                `;
            }     
            
            
          document.getElementById('logout').addEventListener("click", function() {
         localStorage.clear()
        });
        });



    </script>
